<!DOCTYPE html>
<html lang="en">
<%- include("templates/header") %>
<body>
    <div class="container">
        <div class="columns is-vcentered">
            <div class="column is-4 is-offset-4 mt-6">
                <div class="card">
                    <div class="card-content">
                        <div class="content">
                            
                            <h2>Login</h2> 
                            <div class="field">
                                <label class="label">Email</label>
                                <div class="control has-icons-left has-icons-right">
                                    <input class="input" type="email" placeholder="Email input" id="email_input">
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    <span class="icon is-small is-right">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                </div>
                                <p class="help is-success"></p>
                            </div>
                            <div class="field">
                                <label class="label">Password</label>
                                <div class="control has-icons-left has-icons-right">
                                    <input class="input" type="password" id="password_input">
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    <span class="icon is-small is-right">
                                        <i class="fas fa-check"></i>
                                    </span>
                                </div>
                                <p class="help is-danger" id="mensaje_password"></p>
                            </div>
                            <div class="field">
                                <div class="control">
                                    <label class="checkbox">
                                    <input type="checkbox" id="show_password_cb">
                                        Ver contrase√±a
                                    </label>
                                </div>
                            </div>                           
                              
                            <div class="field is-grouped">
                                <div class="control">
                                    <button class="button is-link" id="send_btn">Enviar</button>
                                </div>
                                <div class="control">
                                    <button class="button is-link is-light">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="<%= base_url %>js/login.js"></script>
</body>
</html>